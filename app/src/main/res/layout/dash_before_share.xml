<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dash_before_share"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.base.ShareActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/cancel"
            android:padding="13dp"
            android:background="@drawable/s_rect_white40trans"
            android:src="@drawable/ic_false"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/share"
            android:text="@string/share"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/s_rect_white40trans"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <EditText
        android:id="@+id/share_words"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:lines="10"
        android:gravity="start"
        android:maxLength="140"
        android:hint="@string/notice_share_input"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/words_left"
        android:layout_below="@id/share_words"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
