<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/s_rect_black10back"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/pic_header"
        android:src="@drawable/ic_camera"
        android:tint="@color/color_16"
        android:background="@drawable/s_rect_black20lightgray"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_width="70dp"
        android:layout_height="match_parent" />
    <HorizontalScrollView
        android:layout_toEndOf="@id/pic_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/picture_list"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
</RelativeLayout>