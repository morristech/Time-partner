<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@drawable/s_rect_black10back"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/audio_header"
        android:src="@drawable/ic_audio"
        android:tint="@color/color_1"
        android:background="@drawable/s_rect_black20lightgray"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_width="70dp"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/audio_footer"
        android:src="@drawable/ic_audio_play"
        android:background="@color/light_gray"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="70dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_toStartOf="@id/audio_footer"
        android:layout_toEndOf="@id/audio_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/audio_name"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:lines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/audio_describe"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</RelativeLayout>