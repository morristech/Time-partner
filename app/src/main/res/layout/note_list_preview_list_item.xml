<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/s_rect_black10back"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <TextView
        android:id="@+id/day"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/month"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@id/day"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title_content"
        android:textSize="13sp"
        android:lines="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/month"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="6dp"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_below="@id/title_content"
        android:layout_toEndOf="@id/month"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="6dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/like_state"
            android:visibility="invisible"
            android:src="@drawable/ic_favorite_solid"
            android:background="@android:color/white"
            android:padding="6dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/media_image"
            android:visibility="invisible"
            android:src="@drawable/ic_video"
            android:background="@android:color/white"
            android:padding="6dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/preview_image"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            android:background="@android:color/white"
            android:padding="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/total_images"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/location"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
