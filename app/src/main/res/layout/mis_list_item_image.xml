<?xml version="1.0" encoding="utf-8"?>
<me.shouheng.timepartner.selector.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.shouheng.timepartner.widget.SquareImageView
        android:id="@+id/image"
        android:scaleType="centerInside"
        android:src="@drawable/mis_default_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View android:visibility="gone"
        android:id="@+id/mask"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView android:id="@+id/checkmark"
        android:layout_gravity="top|end"
        android:padding="3dp"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:src="@drawable/mis_btn_unselected"/>

</me.shouheng.timepartner.selector.SquareFrameLayout>