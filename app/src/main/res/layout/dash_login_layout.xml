<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.base.LoginActivity"
    tools:ignore="MergeRootFrame">
    <!--顶部面板-->
    <android.support.design.widget.AppBarLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            app:expandedTitleGravity="center"
            android:id="@+id/toolbar_layout"
            app:title="@string/login_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">
            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <!--底部面板-->
    <android.support.v4.widget.NestedScrollView
        android:background="@color/dark_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--输入提示-->
            <TextView
                android:text="@string/login_subtitle"
                android:textSize="15sp"
                android:textColor="#A0FFFFFF"
                android:layout_margin="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--输入账号-->
            <LinearLayout
                android:weightSum="7"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/in_account"
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimaryLight"
                        android:padding="10dp"
                        android:hint="@string/email_hint"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/edit_mail"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <!--输入密码-->
            <LinearLayout
                android:weightSum="7"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/in_password"
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimaryLight"
                        android:padding="10dp"
                        android:hint="@string/password_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/edit_password"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <!--登陆按钮-->
            <LinearLayout
                android:weightSum="5"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.shouheng.timepartner.widget.ripplebutton.UIRippleButton
                    android:id="@+id/btn_login"
                    android:onClick="onClick"
                    android:text="@string/login"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:background="@color/colorPrimary"
                    app:ripple_color = "@color/colorPrimaryLight"
                    app:color_unpressed="@color/colorPrimary"
                    app:ripple_duration="400"
                    app:shape_type="rectangle"
                    android:layout_weight="3"
                    android:layout_height="40dp"
                    android:layout_width="0dp"/>
            </LinearLayout>
            <!--忘记密码和注册-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--忘记密码-->
                <me.shouheng.timepartner.widget.custom.TPRippleButton
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:id="@+id/login_forget"
                    app:tprRippleColor="@color/white_20"
                    app:tprBackColor="@color/dark_bg"
                    app:tprTitle="@string/login_forget"
                    app:tprTitleColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
                <!--注册-->
                <me.shouheng.timepartner.widget.custom.TPRippleButton
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:id="@+id/register"
                    app:tprRippleColor="@color/white_20"
                    app:tprBackColor="@color/dark_bg"
                    app:tprTitle="@string/register"
                    app:tprTitleColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <!--使用社交账号登陆-->
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/use_social"
                    android:text="@string/login_social"
                    android:textSize="15sp"
                    android:textColor="#A0FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:background="#ccc"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/use_social"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />
                <View
                    android:background="#ccc"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/use_social"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />
            </RelativeLayout>
            <!--使用社交账号登录-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.shouheng.timepartner.widget.ripplebutton.UIRippleButton
                    android:id="@+id/weChat"
                    android:onClick="onClick"
                    android:background="@color/class_prime"
                    android:gravity="center"
                    android:text="@string/we_char"
                    android:textSize="16sp"
                    android:textColor="#A0FFFFFF"
                    android:layout_margin="5dp"
                    app:ripple_color = "@color/class_prime_dark"
                    app:color_unpressed="@color/class_prime"
                    app:ripple_duration="400"
                    app:shape_type="rectangle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
                <me.shouheng.timepartner.widget.ripplebutton.UIRippleButton
                    android:id="@+id/twitter"
                    android:onClick="onClick"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:text="@string/twitter"
                    android:textSize="16sp"
                    android:textColor="#A0FFFFFF"
                    android:layout_margin="5dp"
                    app:ripple_color = "@color/dark_blue"
                    app:color_unpressed="@color/blue"
                    app:ripple_duration="400"
                    app:shape_type="rectangle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
                <me.shouheng.timepartner.widget.ripplebutton.UIRippleButton
                    android:id="@+id/weibo"
                    android:onClick="onClick"
                    android:background="@color/weibo"
                    android:gravity="center"
                    android:text="@string/weibo"
                    android:textSize="16sp"
                    app:ripple_color = "@color/weibo_pressed"
                    app:color_unpressed="@color/weibo"
                    app:ripple_duration="400"
                    app:shape_type="rectangle"
                    android:textColor="#A0FFFFFF"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
