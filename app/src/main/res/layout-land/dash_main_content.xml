<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.base.MainActivity">
    <!--添加一个底层的图片显示组件-->
    <ImageView
        android:id="@+id/bar_bg"
        android:scaleType="fitStart"
        android:src="#26A69A"
        android:minHeight="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--控件的布局-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--工具栏-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
        <!--内容布局-->
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--工具栏-->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:background="#00ffffff">
                <!--显示时间和日期的布局-->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                    <LinearLayout
                        android:id="@+id/weather_detail"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp">
                        <ImageView
                            android:id="@+id/weather_pic"
                            android:padding="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/temperature"
                                style="@style/weather_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/weather_text"
                                style="@style/weather_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/location"
                                style="@style/weather_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/right_arrow"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_width="20dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/date"
                            android:textSize="28sp"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/week"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/year"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:paddingStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/saying"
                        android:textColor="@android:color/white"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>
            <!--滚动显示组件-->
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--第 1 行菜单-->
                    <LinearLayout
                        android:id="@+id/list1"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/menu1"
                            style="@style/dash_linear"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick">
                            <ImageView
                                android:tint="#ff5722"
                                android:src="@drawable/ic_calender2"
                                style="@style/dash_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:text="@string/menu1"
                                style="@style/dash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu2"
                            style="@style/dash_linear"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick">
                            <ImageView
                                android:tint="#ffeb3b"
                                android:src="@drawable/ic_book"
                                style="@style/dash_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:text="@string/menu2"
                                style="@style/dash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu3"
                            style="@style/dash_linear"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick">
                            <ImageView
                                android:tint="#ffc107"
                                android:src="@drawable/ic_assign"
                                style="@style/dash_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:text="@string/menu3"
                                style="@style/dash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu4"
                            style="@style/dash_linear"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick">
                            <ImageView
                                android:tint="#4caf50"
                                android:src="@drawable/ic_task"
                                style="@style/dash_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:text="@string/menu4"
                                style="@style/dash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu5"
                            style="@style/dash_linear"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick">
                            <ImageView
                                android:tint="#cddc39"
                                android:src="@drawable/ic_exam"
                                style="@style/dash_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:text="@string/menu5"
                                style="@style/dash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/menu6"
                            style="@style/dash_linear"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick">
                            <ImageView
                                android:tint="#03a9f4"
                                android:src="@drawable/ic_write"
                                style="@style/dash_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:text="@string/menu6"
                                style="@style/dash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:background="@color/light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <!--每天的课程等信息的列表-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/show_daily"
                        android:minHeight="200dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
    <!--浮动菜单-->
    <me.shouheng.timepartner.widget.fab.TpFloatActionButton
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
